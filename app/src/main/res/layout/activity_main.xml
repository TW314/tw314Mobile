<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Layout da Tela Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_ticket"
            android:id="@+id/txtTicket"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgHourglass"
            android:contentDescription="@string/logo_descript"
            android:src="@drawable/status1_tranquilo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_peopleCount"
            android:id="@+id/txtPeopleCount"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_service"
            android:id="@+id/txtService"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="80dp" />
    </LinearLayout>
    <!-- Fim do Layout Principal -->

    <!-- NavigationDrawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_drawer">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>